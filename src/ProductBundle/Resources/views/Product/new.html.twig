{% extends 'CommonBundle:Site:base.html.twig' %}

{% block body %}
    <div class="col-md-5 col-md-offset-3 align-self-center">
        <div class="row">
            <div class="col-lg-12">
                {% if errors|length > 0 %}
                    <div class="alert alert-danger text-center">
                        <strong>Błędnie wypełniony formularz!</strong><br/><br/>
                        {% for error in errors %}
                            {{ error.message }}<br/>
                        {% endfor %}
                    </div>

                {% endif %}
                <form id="addForm" class="form-horizontal" action="{{ path('product_new') }}"
                      method="post" novalidate="novalidate" data-toggle="validator">
                    <div class="text-center">
                        <div class="form-group">
                            <label>{{ form_label(form.name) }}</label>
                            {{ form_widget(form.name, {"attr":{"class":"form-control", "required": "true"}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.description) }}</label>
                            {{ form_widget(form.description, {"attr":{"class":"form-control", "rows":"3"}}) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.price) }}</label>
                            {{ form_widget(form.price, {"attr":{"class":"form-control", "type":"number"}}) }}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Dodaj</button>
                        </div>
                        {{ form_rest(form) }}
                    </div>
                </form>
            </div>
        </div>

    </div>
{% endblock %}


